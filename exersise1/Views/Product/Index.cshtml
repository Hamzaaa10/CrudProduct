@model List<Product>
<h1 class="text-center">products</h1>
<a class="btn btn-primary" href="/Product/Create">Create New Product</a>


<table class="table table-striped table-dark">
<thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">prand</th>
        <th scope="col">Price</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col">Imgurl</th>
        <th scope="col">TimeCr</th>
        <th scope="col">Action1</th>
            <th scope="col">Action2</th>
    </tr>
</thead>
<tbody>
    @foreach(var item in Model){
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
            <td>@item.prand</td>
            <td>@item.Price$</td>
            <td>@item.Category</td>
            <td>@item.Description</td>
            <td><img src="/Products/@item.Imgurl" width="90"/></td>
            <td>@item.TimeCr.ToString("MM/dd/yyyy")</td>
            <td scope="row"><a class="btn btn-primary btn-sm" href="/Product/Edit/@item.Id">Update</a></td>
            <td scope="row"><a class="btn btn-danger btn-sm" href="/Product/Delete/@item.Id">Delete</a></td>
        </tr>
    }
  

</tbody>
</table>
